<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome</title>
  </head>
  <body>
    <% if (user) { %>
    <p>Welcome, <%= user.username %></p>
    <a href="/users/<%= user.id %>">My Profile</a>
    <a href="/explore">Explore</a>
    <a href="/create-post">Create a new Post</a>
    <a href="/auth/signout">Sign Out</a>

    <h2>Posts from Followed Users</h2>
    <ul>
      <% followedUsersPosts.forEach(post => { %>
      <li>
        <p><a href="/users/<%= post.user.id %>"><%= post.user.username %></a></p>
        <small><%= post.createdAt.toDateString() %></small>
        <h3><a href="/posts/<%= post.id %>"><%= post.title %></a></h3>
        <p><%= post.content %></p>
        <h3>Comments</h3>
        <ul class="comments-list">
          <% post.comments.forEach(comment => { %>
          <li>
            <a href="/users/<%= comment.user.id %>"><h4><%= comment.user.username %></h4></a>
            <p><%= comment.content %></p>
            <small><%= comment.createdAt.toDateString() %></small>
          </li>
          <% }) %>
        </ul>
        <form action="/posts/<%= post.id %>/comments" method="POST" class="comment-form">
          <textarea name="content" placeholder="Add a comment..."></textarea>
          <button type="submit">Comment</button>
        </form>
      </li>
      <% }) %>
    </ul>

    <% } else { %>
    <a href="/signup">Sign Up</a>
    <a href="/signin">Sign In</a>
    <% } %>
  </body>
  <script type="text/javascript" charset="utf-8" src="/js/comment.js"></script>
</html>
