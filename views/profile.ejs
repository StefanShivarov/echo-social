<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= user.username %></title>
  </head>
  <body>
    <% if (user.profilePictureUrl) { %>
    <img src="<%= user.profilePictureUrl %>" alt="<%= user.username %>" />
    <% } else { %>
    <img
      src="https://thumbs.dreamstime.com/b/default-profile-picture-avatar-user-icon-person-head-icons-anonymous-male-female-businessman-photo-placeholder-social-network-272206807.jpg"
      alt="<%= user.username %>"
    />
    <% } %>
    <h1><%= user.username %></h1>
    <h3><%= user.email %></h3>
    <% if (user.id === loggedInUserId) { %>
    <a href="/profile/edit">Edit Profile</a>
    <% } %>
    <p>
      Followers:
      <a href="/users/<%= user.id %>/followers"><%= followersCount %></a>
    </p>
    <p>
      Following:
      <a href="/users/<%= user.id %>/following"><%= followingCount %></a>
    </p>
    <h2>Posts</h2>
    <ul>
      <% posts.forEach(post => { %>
      <li>
        <h3>
          <a href="/users/<%= post.user.id %>"><%= post.user.username %></a>
        </h3>
        <small><%= post.createdAt.toDateString() %></small>
        <p><%= post.content %></p>
        <% if (post.imageUrl) { %>
        <img src="<%= post.imageUrl %>" alt="Post Image" />
        <% } %>
        <form
          action="/posts/<%= post.id %>/like"
          method="POST"
          class="like-post-form"
        >
          <button type="submit" class="like-button">
            <%= post.liked ? 'Unlike' : 'Like' %>
          </button>
          <a class="likes-count" href="/posts/<%= post.id %>/likes"
            ><%= post.likes.length %></a
          >
        </form>
        <% if (post.userId === loggedInUserId) { %>
        <a href="/posts/<%= post.id %>/edit">Edit</a>
        <form action="/posts/<%= post.id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
        <% } %>
        <h3>Comments</h3>
        <ul class="comments-list">
          <% post.comments.forEach(comment => { %>
          <li>
            <a href="/users/<%= comment.user.id %>"
              ><h4><%= comment.user.username %></h4></a
            >
            <p><%= comment.content %></p>
            <small><%= comment.createdAt.toDateString() %></small>
            <form
              action="/posts/<%= post.id %>/comments/<%= comment.id %>/like"
              method="POST"
              class="like-comment-form"
            >
              <button type="submit" class="like-button">
                <%= comment.liked ? 'Unlike' : 'Like' %>
              </button>
              <a
                class="likes-count"
                href="/posts/<%= post.id %>/comments/<%= comment.id %>/likes"
                ><%= comment.likes.length %></a
              >
            </form>
            <% if (comment.user.id === loggedInUserId) { %>
            <form
              action="/posts/<%= post.id %>/comments/<%= comment.id %>?_method=DELETE"
              method="POST"
              class="delete-comment-form"
            >
              <button type="submit">Delete</button>
            </form>
            <% } %>
          </li>
          <% }) %>
        </ul>
        <form
          action="/posts/<%= post.id %>/comments"
          method="POST"
          class="comment-form"
        >
          <textarea name="content" placeholder="Add a comment..."></textarea>
          <button type="submit">Comment</button>
        </form>
      </li>
      <% }) %>
    </ul>
    <a href="/">Back to Home</a>
  </body>
  <script type="text/javascript" charset="utf-8" src="/js/comment.js"></script>
  <script
    type="text/javascript"
    charset="utf-8"
    src="/js/toggleLike.js"
  ></script>
</html>
